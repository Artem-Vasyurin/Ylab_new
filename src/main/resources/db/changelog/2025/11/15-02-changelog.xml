<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.21.xsd">

    <changeSet id="1" author="Vasyurin_Artem">
        <createSequence sequenceName="product_seq" schemaName="app_schema" startValue="1"/>
    </changeSet>

    <changeSet id="2" author="Vasyurin_Artem">
        <createTable tableName="products" schemaName="app_schema">
            <column name="id" type="BIGINT" autoIncrement="false">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="category" type="VARCHAR(255)"/>
            <column name="price" type="INT"/>
            <column name="brand" type="VARCHAR(255)"/>
        </createTable>
        <addDefaultValue tableName="products" columnName="id" defaultValueSequenceNext="product_seq"/>
    </changeSet>

    <changeSet id="3" author="Vasyurin_Artem">
        <createSequence sequenceName="user_seq" schemaName="app_schema" startValue="1"/>
    </changeSet>

    <changeSet id="4" author="Vasyurin_Artem">
        <createTable tableName="users" schemaName="app_schema">
            <column name="id" type="BIGINT" autoIncrement="false">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(50)"/>
        </createTable>
        <addDefaultValue tableName="users" columnName="id" defaultValueSequenceNext="user_seq"/>
    </changeSet>

</databaseChangeLog>
